    <ImplicitUsings>enable</ImplicitUsings>
    <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
    <UserSecretsId>4e7ea2e1-2a3c-40fa-bf83-7305e7ae785a</UserSecretsId>
    <DockerfileContext>..\..</DockerfileContext>
